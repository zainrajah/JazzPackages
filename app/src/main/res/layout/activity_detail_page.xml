<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EAEA"
    tools:context=".DetailPage">

    <TextView
        android:id="@+id/DetailsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_38sdp"
        android:text="Details:"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DetailsDescription"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_22sdp"
        android:text="Recharge requored Rs.8 \n Unsubscribed : *334#\nString :*332#"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/DetailsTxt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/firstline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"

        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/DetailsDescription" />

    <TextView
        android:id="@+id/ValidForText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="Valid For:"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstline" />

    <TextView
        android:id="@+id/ValidForDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="1 Day"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/ValidForText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstline" />

    <View
        android:id="@+id/Secondline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"

        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ValidForText" />

    <TextView
        android:id="@+id/VolumeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="Volume"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Secondline" />

    <TextView
        android:id="@+id/VolumeDescription"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_22sdp"
        android:text="SMS:1800,10 MB"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/VolumeText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Secondline" />

    <View
        android:id="@+id/Thirdline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"

        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/VolumeText" />

    <TextView
        android:id="@+id/Pricetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="Price:"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Thirdline" />

    <TextView
        android:id="@+id/PriceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="Rs.8 (Incl Tax)"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/Pricetext"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Thirdline" />

    <View
        android:id="@+id/forthLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"

        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/Pricetext" />

    <TextView
        android:id="@+id/CodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="Code:"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forthLine" />

    <TextView
        android:id="@+id/CodeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="*333#"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/CodeText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forthLine" />

    <View
        android:id="@+id/fifthLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"

        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/CodeText" />

    <Button
        android:id="@+id/ActivateBtn"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_48sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:text="Activate"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fifthLine"
        />



    <TextView
        android:id="@+id/tvAdE"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Ad is Loading"
        android:visibility="visible"
        android:background="#757171"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"  />
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="#757171"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>